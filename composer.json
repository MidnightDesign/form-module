{
    "name": "midnight/form-module",
    "license": "MIT",
    "type": "library",
    "description": "Zend Framework 2 module for better form markup",
    "require": {
        "php": "^7.0",
        "psr/container": "^1.0",
        "zendframework/zend-form": "^2.7",
        "zendframework/zend-i18n": "^2.8",
        "zendframework/zend-servicemanager": "^2.7 || ^3.0",
        "zendframework/zend-view": "^2.6"
    },
    "require-dev": {
        "infection/infection": "^0.8.2",
        "maglnet/composer-require-checker": "^0.2.1",
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-strict-rules": "^0.9.0",
        "phpunit/phpunit": "^7.1",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Midnight\\FormModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MidnightTest\\FormModule\\": "tests/"
        }
    },
    "extra": {
        "zf": {
            "module": "Midnight\\FormModule"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check-deps": "vendor/bin/composer-require-checker",
        "cs-check": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "infection": "vendor/bin/infection --min-msi=100 --min-covered-msi=100 --log-verbosity=2",
        "phpstan": "vendor/bin/phpstan analyse src/ --level 7 -c phpstan.neon",
        "phpunit": "vendor/bin/phpunit",
        "check": [
            "@check-deps",
            "@infection",
            "@phpstan",
            "@phpunit",
            "@cs-check"
        ]
    }
}
